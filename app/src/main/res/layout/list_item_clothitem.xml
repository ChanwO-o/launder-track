<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="@dimen/list_item_wardrobe_height">

	<TextView
		android:id="@+id/tvClothItemName"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_weight="5"
		android:textSize="@dimen/list_item_wardrobe_text_size"
		android:text="Cloth Item Name" />

	<TextView
		android:id="@+id/tvClothItemRecentWashDate"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:textSize="@dimen/list_item_wardrobe_text_size"
		android:text="Recent Wash Date" />
</LinearLayout>